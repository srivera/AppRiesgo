<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">



    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_compartir"
        android:layout_below="@+id/btnMovimientos" />

    <Button
        android:id="@+id/btnMovimientos"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="11dp"
        android:background="@drawable/button_gris_oscuro"
        android:text="Movimientos en masa"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnInundacion"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="11dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gris_oscuro"
        android:text="Inundaciones"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnMovimientos"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el mapa:"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="7dp"
        android:id="@+id/textView7"
        android:textSize="11dp"/>

</RelativeLayout>